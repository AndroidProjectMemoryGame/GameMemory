<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCFFFF"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:background="#009788"
        >
        <ImageButton
            android:id="@+id/btn_icon_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_back"
            android:background="#009788"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="TIME:"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="15dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0/0"
            android:textColor="#fff"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/txt_mode"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="NO TIME LIMIT"
            android:textColor="#fff"
            android:layout_weight="2"
            android:layout_toRightOf="@+id/txt_time"
            android:layout_toLeftOf="@+id/btn_music"
            android:textSize="13dp"/>
        <ImageButton
            android:id="@+id/btn_music"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/icon_music"
            android:background="#009788"
            android:layout_toRightOf="@+id/txt_mode"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        style="?android:attr/progressBarStyleHorizontal"
         />
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        >

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnWidth="80dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="25dp"
            android:horizontalSpacing="25dp"
            android:stretchMode="columnWidth"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

</LinearLayout>
