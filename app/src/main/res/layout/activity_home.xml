<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="@drawable/background_game">

    <RelativeLayout
        android:id="@+id/header_screen"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#009788">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_mode"
            android:text="Select mode"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/btn_sound_start"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_music"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/icon_music"
            android:onClick="doStop"/>
        <Button
            android:id="@+id/btn_sound_stop"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_music"
            android:layout_alignParentRight="true"
            android:text="open"
            android:textColor="#fff"
            android:onClick="doStart"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/area_footer">
        <Button
            android:id="@+id/btn_no_limit_time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="NO LIMIT TIME"
            android:background="@drawable/btn_music"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="17dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btn_normal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="NORMAL"
            android:background="@drawable/btn_music"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="17dp"
            android:onClick="onNormal"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btn_hard"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="HARD"
            android:background="@drawable/btn_music"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="17dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center"
        android:background="@drawable/area_footer">
        <Button
            android:id="@+id/btn_share"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="SHARE"
            android:textSize="14dp"
            android:background="@drawable/btn_music"
            android:layout_alignParentLeft="true"
            android:textColor="#fff"
            android:onClick="share"/>
        <Button
            android:id="@+id/btn_moreGame"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="MORE GAMES"
            android:textSize="14dp"
            android:background="@drawable/btn_music"
            android:layout_alignParentRight="true"
            android:onClick="moreGame"
            android:textColor="#fff"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>

    <RelativeLayout
        android:id="@+id/footer_screen"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#009788">
    </RelativeLayout>

</LinearLayout>